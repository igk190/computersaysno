{
    "name": "How about NO",
    "version": "1.0",
    "description": "Block time-wasting websites!",
    "permissions": [
      "activeTab",
      "tabs",
      "declarativeContent",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "*://twitter.com/*",
      "https://www.youtube.com/channel/UCcDAFjqR_6NYCV6WArBEkWA",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "options_page": "options.html",
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "web_accessible_resources": ["options.html", "no.html"],
    "manifest_version": 2
  }